{
	"name": "@7tv/website",
	"private": true,
	"license": "Apache-2.0 with Commons Clause",
	"scripts": {
		"dev": "pnpm run codegen && vite dev --port 4173",
		"build": "pnpm run codegen && pnpm run svelte:check && vite build",
		"preview": "vite preview --port 4173",
		"lint": "pnpm run codegen && prettier --check \"**/*\" -u && eslint . && pnpm run svelte:check",
		"svelte:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"svelte:check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write \"**/*\" -u",
		"codegen": "graphql-codegen --config codegen.ts"
	},
	"type": "module",
	"devDependencies": {
		// TS
		"typescript": "^5.6.3",
		"tslib": "^2.8.1",

		// SvelteKit
		"vite": "^5.4.11",
		"svelte": "^5.1.15",
		"@sveltejs/kit": "^2.8.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"sass": "^1.80.6",

		// Linting
		"eslint": "^9.14.0",
		"@eslint/js": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"typescript-eslint": "^8.14.0",
		"svelte-check": "^4.0.7",
		"globals": "^15.12.0",

		// Formatting
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.8",

		// Icons
		"phosphor-svelte": "^2.0.1",
		"svelte-fa": "^4.0.3",
		"@fortawesome/free-brands-svg-icons": "^6.6.0",
		"@fortawesome/free-regular-svg-icons": "^6.6.0",

		// GQL codegen
		"graphql": "^16.9.0",
		"@graphql-codegen/cli": "^5.0.3",
		"@graphql-codegen/client-preset": "^4.5.0",
		"svelte2tsx": "^0.7.24",

		// GQL client
		"@urql/svelte": "^4.2.2",
		"@urql/exchange-auth": "^2.2.0",

		// Other
		"moment": "^2.30.1",
		"svelte-i18n": "^4.0.1",
		"svelte-infinite-loading": "^1.4.0"
	}
}
